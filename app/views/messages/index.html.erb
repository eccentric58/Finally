<p id="notice"><%= notice %></p>

<h1> <%= t(:messages) %> </h1>

<table>
  <thead>
    <tr>
      <th><%= t(:content) %></th>
      <th><%= t(:user) %></th>
      <th><%= t(:room) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.content %></td>
        <td><%= message.user_id %></td>
        <td><%= message.room_id %></td>
        <td><%= link_to t(:show), message %></td>
        <td><%= link_to t(:edit), edit_message_path(message) %></td>
        <td><%= link_to t(:destroy), message, method: :delete, data: { confirm: t(:sure)} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path %>
